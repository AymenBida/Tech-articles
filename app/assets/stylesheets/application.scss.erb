@import "bootstrap/scss/bootstrap";
@import url('https://fonts.googleapis.com/css2?family=Lato&family=Share+Tech&display=swap');

.body {
  background-image: url(<%= asset_path 'background.jpg' %>);
}

.navbar {
  display: flex;
  justify-content: start;
  align-items: center;
  background-color: whitesmoke;
  padding: 1.3em 1em 1.5em;
}

.navbar__brand {
  color: black;
  text-decoration: none;
  font-family: 'Share Tech', sans-serif;
  font-size: 1.6em;
  font-weight: 900;
  padding: 0 0.5em;
  line-height: 1em;
  &:hover {
    text-decoration: none;
    color: black;
  }
  &:focus {
    outline: none;
    box-shadow: lightsalmon 0 3px 2px -2px;
  }
}

.navbar__link {
  color: grey;
  text-decoration: none;
  font-weight: 600;
  line-height: 1.1em;
  font-size: 0.8em;
  padding: 0 0.5em;
  border-left: grey 2px solid;
  &:hover {
    color: orangered;
    text-decoration: none;
  }
  &:focus {
    outline: none;
    box-shadow: lightsalmon 0 3px 2px -2px;
    padding-bottom: 0.1em;
  }
}

.navbar__link--first {
  margin-left: auto;
  border-left: 0;
}

.main-container {
  display: flex;
  height: calc(100vh - 70.4px);
  background-image: url(<%= asset_path 'login_wallpaper.jpg' %>);
  background-size: cover;
  background-position: center;
}

.form {
  min-width: 33vw;
  max-width: 94%;
  background-color: whitesmoke;
  padding: 3em;
  margin: auto;
}

.form__title {
  font-size: 1.8em;
  font-family: 'Lato', sans-serif;
}

.form__input-group {
  margin: 1em 0 0 0;
  height: 3em;
  display: flex;
  border: lightgray solid 0.1px;
}

.form__input {
  width: 100%;
  border: 0;
  padding: 0 1em;
  &:focus {
    outline: none;
    box-shadow: lightsalmon 0 0 6px;
  }
}

.form__btn {
  background-color: orangered;
  border: 0;
  color: whitesmoke;
  font-weight: 600;
  padding: 0 1em;
  &:focus {
    outline: none;
    box-shadow: lightsalmon 0 0 6px;
  }
}

.notice {
  display: flex;
  height: 3em;
  color: white;
  font-weight: 600;
  background-color: rgba(129, 129, 129, 0.85);
  justify-content: center;
  align-items: center;
}

.notice--success {
  background-color: rgba(62, 129, 62, 0.85);
}

.notice--alert {
  background-color: rgba(177, 38, 14, 0.85);
}